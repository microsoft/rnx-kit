{
  "name": "@rnx-kit/test-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "rnx-kit-scripts build",
    "depcheck": "rnx-kit-scripts depcheck",
    "lint": "rnx-kit-scripts lint",
    "test": "rnx-kit-scripts test",
    "bundle": "react-native rnx-bundle",
    "bundle:android": "react-native rnx-bundle --platform android",
    "bundle:ios": "react-native rnx-bundle --platform ios",
    "bundle:macos": "react-native rnx-bundle --platform macos",
    "bundle:windows": "react-native rnx-bundle --platform windows",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "macos": "react-native run-macos --scheme ReactTestApp",
    "windows": "react-native run-windows --sln windows\\SampleCrossApp.sln",
    "start": "react-native start --projectRoot src"
  },
  "dependencies": {
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-macos": "0.63.23",
    "react-native-windows": "0.63.26"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@rnx-kit/babel-preset-metro-react-native": "*",
    "@rnx-kit/cli": "*",
    "@rnx-kit/metro-config": "*",
    "@rnx-kit/metro-plugin-cyclic-dependencies-detector": "*",
    "@rnx-kit/metro-serializer": "*",
    "@types/react": "^17.0.2",
    "@types/react-native": "^0.63.50",
    "eslint": "^7.0.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "react-native-test-app": "^0.5.4",
    "react-test-renderer": "16.13.1",
    "rnx-kit-scripts": "*",
    "typescript": "^4.0.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "rnx-kit": {
    "bundle": {
      "entryPath": "lib/src/index.js",
      "distPath": "dist",
      "assetsPath": "dist",
      "bundlePrefix": "main",
      "targets": [
        "ios",
        "android",
        "macos",
        "windows"
      ],
      "platforms": {
        "android": {
          "assetsPath": "dist/res"
        }
      }
    }
  }
}
