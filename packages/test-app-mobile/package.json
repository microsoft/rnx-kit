{
  "name": "@rnx-kit/test-app-mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "rnx-kit-build build",
    "bundle": "rnx-kit-build bundle --dev true --reset-cache",
    "clean": "rnx-kit-build clean",
    "depcheck": "rnx-kit-build depcheck",
    "lint": "rnx-kit-build lint",
    "test": "rnx-kit-build test",
    "bundle:android": "rnx-kit-build bundle --dev true --reset-cache --platform android",
    "bundle:ios": "rnx-kit-build bundle --dev true --reset-cache --platform ios",
    "bundle:macos": "rnx-kit-build bundle --dev true --reset-cache --platform macos",
    "bundle:windows": "rnx-kit-build bundle --dev true --reset-cache --platform windows",
    "android": "react-native run-android",
    "ios": "react-native run-ios --scheme ReactTestApp",
    "macos": "react-native run-macos --scheme ReactTestApp",
    "windows": "react-native run-windows --sln windows\\SampleCrossApp.sln",
    "start": "react-native start",
    "start:windows": "react-native start --config=metro.config.windows.js"
  },
  "dependencies": {
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-macos": "0.63.10",
    "react-native-windows": "0.63.20"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^0.0.5",
    "@rnx-kit/build": "0.0.1",
    "@rnx-kit/metro-config": "1.0.0",
    "babel-jest": "^26.0.0",
    "eslint": "^6.5.1",
    "jest": "^26.0.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "react-native-test-app": "^0.3.11",
    "react-test-renderer": "16.13.1"
  },
  "jest": {
    "preset": "react-native"
  },
  "metroBundles": {
    "entry": "./index.js",
    "outputPath": "./dist",
    "assetsPath": "./dist",
    "bundleName": "main",
    "targets": [
      "ios",
      "android",
      "macos",
      "windows"
    ],
    "platforms": {
      "android": {
        "assetsPath": "./dist/res"
      }
    }
  }
}
