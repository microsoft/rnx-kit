{
  "name": "@rnx-kit/metro-serializer-esbuild",
  "version": "0.0.7",
  "description": "Experimental esbuild serializer for Metro",
  "homepage": "https://github.com/microsoft/rnx-kit/tree/main/packages/metro-serializer-esbuild#readme",
  "license": "MIT",
  "files": [
    "lib/*"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/rnx-kit",
    "directory": "packages/metro-serializer-esbuild"
  },
  "scripts": {
    "build": "rnx-kit-scripts build",
    "format": "prettier --write src/*.ts test/*.ts",
    "lint": "rnx-kit-scripts lint"
  },
  "dependencies": {
    "@rnx-kit/console": "^1.0.0",
    "esbuild": "^0.12.8",
    "esbuild-plugin-lodash": "^1.0.3",
    "semver": "^7.0.0"
  },
  "peerDependencies": {
    "metro": ">=0.67.0"
  },
  "devDependencies": {
    "@rnx-kit/babel-preset-jest-typescript": "*",
    "@rnx-kit/metro-serializer": "*",
    "@types/metro": "*",
    "@types/metro-config": "*",
    "@types/metro-transform-worker": "*",
    "@types/semver": "^7.0.0",
    "metro": "^0.66.1",
    "rnx-kit-scripts": "*"
  },
  "depcheck": {
    "ignoreMatches": [
      "metro-config",
      "metro-transform-worker"
    ]
  },
  "eslintConfig": {
    "extends": "@rnx-kit/eslint-config"
  },
  "jest": {
    "roots": [
      "test"
    ],
    "testRegex": "/test/.*\\.test\\.ts$"
  }
}
