{
  "name": "@rnx-kit/metro-serializer",
  "version": "1.0.0",
  "description": "Metro's default JavaScript bundle serializer but with plugin support",
  "homepage": "https://github.com/microsoft/rnx-kit/tree/main/packages/metro-serializer#readme",
  "license": "MIT",
  "files": [
    "lib/*"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/rnx-kit",
    "directory": "packages/metro-serializer"
  },
  "scripts": {
    "build": "rnx-kit-scripts build",
    "format": "prettier --write src/*.ts test/*.ts",
    "test": "rnx-kit-scripts test"
  },
  "dependencies": {
    "semver": "^7.0.0"
  },
  "peerDependencies": {
    "metro": ">=0.58.0"
  },
  "devDependencies": {
    "@rnx-kit/babel-preset-jest-typescript": "*",
    "@types/metro": "*",
    "@types/rnx-kit-metro__metro": "*",
    "@types/semver": "^7.0.0",
    "metro": "^0.66.1",
    "rnx-kit-scripts": "*"
  },
  "depcheck": {
    "ignoreMatches": [
      "metro-config"
    ]
  },
  "eslintConfig": {
    "extends": "@rnx-kit/eslint-config"
  },
  "jest": {
    "roots": [
      "test"
    ],
    "testRegex": "/test/.*\\.test\\.ts$"
  }
}
