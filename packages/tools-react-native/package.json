    "@rnx-kit/tools-filesystem": "*",
    "@rnx-kit/tsconfig": "*",
    "@types/node": "^20.0.0",
    "eslint": "^8.56.0",
    "metro": "^0.80.0",
    "metro-config": "^0.80.0",
    "metro-core": "^0.80.0",
    "metro-resolver": "^0.80.0",
    "metro-source-map": "^0.80.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
