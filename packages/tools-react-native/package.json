  "license": "MIT",
  "author": {
    "name": "Microsoft Open Source",
    "email": "microsoftopensource@users.noreply.github.com"
  },
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "cache.d.ts",
    "cache.js",
    "context.d.ts",
    "context.js",
    "metro.d.ts",
    "metro.js",
    "platform.d.ts",
    "platform.js",
    "src"
